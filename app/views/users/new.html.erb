<h1>新規ユーザー登録</h1>
<% if @user.errors.any? %>
  <div>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @user, local: true do |f| %>
  <div>
    <%= f.label :name, "ユーザー名" %>
    <%= f.text_field :name %>
    <%= f.label :address, "メールアドレス" %>
    <%= f.text_field :email %>
    <%= f.label :password, "パスワード" %>
    <%= f.text_field :password %>
  </div>
  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>
